<% let welcomeMessage = `Hey there <b>Stranger</b>!`; %>
<% let welcomeAction = `<a href="/signup">Sign up</a> to create your own posts`; %>
<% if (currentUser) { %>
  <% welcomeMessage = `Welcome back <b>${currentUser.firstname ? currentUser.firstname : currentUser.username}</b>!` %>
  <% welcomeAction = `<a href="/post/new">Create a new post</a>`%>
<% } %>

<div class="content">
  <div class="welcome-card">
    <div class="message"><%- welcomeMessage %></div>
    <div class="action"><%- welcomeAction %></div>
  </div>
  <%- include("../partials/posts") %>
</div>
